@model TMDT.ViewModels.LoginUser

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4>Đăng nhập</h4>
                </div>
                <div class="card-body">
                    <form asp-controller="Login" asp-action="Login">
                        <div class="form-group">
                            <label for="username">Tên đăng nhập</label>
                            <input asp-for="Username" type="text" class="form-control" id="username" name="username" required>
                        </div>
                        <div class="form-group">
                            <label for="password">Mật khẩu</label>
                            <input asp-for="Password" type="password" class="form-control" id="password" name="password" required>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Đăng nhập</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

